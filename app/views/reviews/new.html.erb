<h1>Add a Review for <%= @restaurant.name %></h1>

<%= form_with model: [@restaurant, @review] do |form| %>
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 0..5, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <%= form.submit "Submit Review", class: "btn btn-success" %>
<% end %>

<%= link_to "Back to restaurant", restaurant_path(@restaurant) %>
